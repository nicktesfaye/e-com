<%- include('partials/header'); -%>

<body>
  <div class="cart-wrapper">
    <div class="shopping-cart">
      <span>Your Orders</span> <span class="price">Price</span>
    </div>

    <%if(orders[0]) {%>
    <ul>
      <% let temp = 0, no=0%> <% orders.forEach(function(item) { %>
      <li>
        <img class="preview" src="<%=item.path%>" alt="404" />
        <div class="cart-info">
          <span><%= item.item %></span>

          <div class="spinner">
            <form action="/users/orders/<%=item.id%>" method="post">
              <h2>&nbsp Quantity: &nbsp<%=item.quantity%></h2>
              <p></p>
              <div class="cancel-order">
                <button
                  class="green btn"
                  type="submit"
                  value="delete"
                  name="delete"
                >
                  Cancel Order
                </button>
              </div>
            </form>
            <div class="deli">
              <p><span style="font-weight: bold">Delivery Time: </span></p>
              <p><span>Arriving Shortly!!</span></p>
            </div>
          </div>
        </div>
        <p>₹<%= item.price *(100 - item.dis)/100 %></p>
      </li>

      <% temp += item.price *(100 - item.dis)/100 * item.quantity ;
      no+=item.quantity; %> <% }); %>
      <p class="subtotal">
        <span class="a">Subtotal(<%= no %> items) : </span>₹<%= temp %>
      </p>
    </ul>

    <% }else {%>
    <div class="empty-cart">
      <h2>No orders Yet !</h2>
      <a href="/home">click here to start shopping!</a>
    </div>
    <%}%>
  </div>
</body>

<%- include('partials/bottom'); -%> <%- include('partials/footer'); -%>
